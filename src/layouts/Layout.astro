---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import AccessibilityControls from '../components/AccessibilityControls.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Project Prosthetic" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="https://measurementjustice.org/wp-content/uploads/2022/02/cropped-CMJ-icon-32x32.jpg" sizes="32x32">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
		<AccessibilityControls />
	</body>
</html>

<style is:global>
	:root {
		 --accent: 39, 76, 119; 
  		--accent-light: 163, 206, 241;
  		--accent-dark: 96, 150, 186; 

  		--text-color:rgb(212, 212, 212);      
  		--background-color:rgb(0, 26, 51);   

  		--red: 56, 134, 217;          
  		--brun: 71, 123, 179;           
  		--brun-light: 163, 206, 241;  

		
		/* Fluid typography variables */
		--fluid-min-width: 320;
		--fluid-max-width: 1200;
		--fluid-min-size: 16;
		--fluid-max-size: 20;
		--fluid-min-ratio: 1.2;
		--fluid-max-ratio: 1.25;

		--fluid-screen: 100vw;
		--fluid-bp: calc((var(--fluid-screen) - var(--fluid-min-width) / 16 * 1rem) / (var(--fluid-max-width) - var(--fluid-min-width)));
	}

	@media screen and (min-width: 1200px) {
		:root {
			--fluid-screen: calc(var(--fluid-max-width) * 1px);
		}
	}

	html {
		font-family: system-ui, sans-serif;
		background: var(--background-color);
		color: var(--text-color);
		font-size: calc(((var(--fluid-min-size) / 16) * 1rem) + (var(--fluid-max-size) - var(--fluid-min-size)) * var(--fluid-bp));
	}

	body {
		margin: 0;
		padding: 0;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}

	body.inverted {
		background-color: #000 !important;
		color: #fff !important;
	}

	body.inverted * {
		background-color: #000 !important;
		color: #fff !important;
	}

	main {
		flex: 1;
		padding: 2rem;
		max-width: 1200px;
		margin: 0 auto;
		width: 100%;
		box-sizing: border-box;
	}

	img {
		max-width: 100%;
		height: auto;
		border-radius:5%;
	}

	h1 {
		font-size: calc(var(--fluid-min-ratio) * 2em);
	}

	h2 {
		font-size: calc(var(--fluid-min-ratio) * 1.5em);
	}

	h3 {
		font-size: calc(var(--fluid-min-ratio) * 1.25em);
	}

	@media (min-width: 1200px) {
		h1 {
			font-size: calc(var(--fluid-max-ratio) * 2em);
		}

		h2 {
			font-size: calc(var(--fluid-max-ratio) * 1.5em);
		}

		h3 {
			font-size: calc(var(--fluid-max-ratio) * 1.25em);
		}
	}

	@media (max-width: 768px) {
		main {
			padding: 1rem;
		}
	}
</style>
